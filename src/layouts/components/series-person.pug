if file
  article.series-item.series-person(id='series-article-'+file.slug)
    .row
      .col-xs-6.col-sm-3
        .series-person-photo-wrapper
          .content
            img.img-responsive.series-person-photo(src=file.photo.fields.file.url)
      .col-xs-6.col-sm-9
        h3.series-item-title.series-person-title
            != file.title
        if file.jobTitle && file.jobTitle.length
          p.series-person-job-title
            include ../helpers/job-title
            +jobTitle(file.jobTitle, file.organisations)
        .series-item-contents.series-person-bio
          != file.contents